{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"include": ["src", ".devcontainer", "*.json", "*.cjs", "*.[j|t]s"],
		"ignore": ["src/echo/pb/*"],
		"ignoreUnknown": true
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"indentWidth": 4,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useMediaCaption": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"useNodejsImportProtocol": "off"
			}
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"quoteProperties": "preserve",
			"bracketSpacing": true,
			"bracketSameLine": true,
			"arrowParentheses": "asNeeded"
		}
	}
}
